<!DOCTYPE html>
<html>

  <%= render 'layouts/partials/head', specific_css_file_link: capture { %>
    <link rel="stylesheet" type="text/css" href="css/styles_loginDetails.css">
  <% } %>
  <% # do end syntax doesn't work in the above %>

  <body id="login_details">

    <%= render 'layouts/partials/navbar', right_side_menu: false %>
    <%= render partial: "layouts/partials/flash", flash: flash %>
    <!--====facebook, gmail and manual login page start=====-->

    <div class="container" style="margin-bottom:50px;">
      <div class="page-header">
        <h3 style="text-align:center; font-weight:bold; margin-top:100px">Just one step...fellas!</h2>
        <p style="text-align:center">We need to know your name and email if we want to contact you!</p>
      </div>
      <hr class="style2" style="margin-bottom:50px">
      <div class="row" style="background-color:#eaebed">
        <div class="col-sm-4"></div>

        <div class="col-sm-4 col-sm-border">
          <h4 style="font-weight:bold; margin-top:30px">Connect with social network</h4>
          <hr>
          <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-3">
            <a href="auth/facebook" id="facebook_login_btn" type="button" class="btn btn-fb"><i class="fa fa-facebook left"></i> Facebook</a>
              <h6 style="font-weight:bold; margin-top:10px; margin-left: 65px">OR</h6>
            <a href="auth/google_oauth2" id="google_login_btn" type="button" class="btn btn-gplus"><i class="fa fa-google-plus left"></i> Google +</a>
          </div>
          <div class="col-sm-6"></div>
          </div>
        </div>

        <div class="col-sm-4"></div>
      </div>
    </div>

    <!--====facebook, gmail and manual login page end=====-->

    <%= render 'layouts/partials/footer' %>

    <%= render 'layouts/partials/javascripts', specific_js_file_link: '' %>

  </body>
</html>
