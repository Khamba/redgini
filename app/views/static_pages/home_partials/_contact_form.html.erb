<!--===================Contact form start============================-->
<div class="container" id="contactus">
  <h2>Contact us</h2>
  <h5 style="text-align:center;">We will reach out to you as soon as possible...</h5>
  <hr class="divider">
  <div class="row">
    <div class="col-sm-3"></div>

    <div class="col-sm-6">
      <form class="" id="contact_form" action="/contact_us" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
          <label for="form_name">Your Name</label>
          <input type="text" class="form-control form-control-sm" id="form_name" name="contact_us[name]" value="" placeholder="">
        </div>

        <div class="form-group">
        <label for="form_phone">Your phone</label>
        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <div class="input-group-addon">+91</div>
          <input type="tel" class="form-control form-control-sm" id="form_phone" name="contact_us[mobile_number]" placeholder="">
        </div>
        </div>

        <div class="form-group">
          <label for="form_email">Your Email</label>
          <input type="email" class="form-control form-control-sm" id="form_email" name="contact_us[email]" value="" placeholder="">
        </div>

        <div class="form-group">
          <label for="form_message">Your Message</label>
          <textarea class="form-control input-sm" name="contact_us[message]" rows="6" cols="80" id="form_message" placeholder=""></textarea>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <button type="submit" class="btn btn-danger btn-sm" id="form_submit">Send Message</button>
          </div>
        </div>

          </form>
        </div>

        <div class="col-sm-3"></div>
      </div>
      <hr class="style2">
  </div>



</div>
<!--===================Conatct form end============================-->
