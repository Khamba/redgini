<!--====================cake boxes start==================-->
<div class="col-sm-9">
  <div class="container">
    <% @products.all.in_groups_of(3, false) do |products| %>
      <div class="row" style="margin: 10px 0px 10px 0px;">
        <% products.each do |product| %>
          <div class="col-md-4">
            <div class="card collection-card shadow">
              <div class="view hm-zoom cake_images">
                <img src=<%= product.image.url %> class="img-fluid" alt="">
                <a>
                  <div class="mask  waves-light"></div>
                </a>
              </div>
              <div class="card-block text-center">
                <div class="row">
                  <div class="col-lg-6">
                    <p class="cake_name"><%= product.name %></p>
                  </div>
                  <div class="col-lg-6">
                    <i class="fa fa-heart" aria-hidden="true" style="color:hotpink">&nbsp;50</i>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="cake_price">Price: Rs.<%= product.price %>/-</p>
                  </div>
                  <div class="col-sm-6">
                    <p class="cake_weight">Weight: <%= product.weight %>Kg</p>
                  </div>
                </div>
                <%= form_tag(add_to_cart_path, method: :post) do %>
                  <div class="row">
                    <%= hidden_field_tag :product_id, product.id %>
                    <div class="col-lg-5">
                      <div class="row qty-controls">
                        <div class="col-lg-4">
                          <button type="button" name="button" class="btn inc_dec_btn btn-sm qtyminus" field="quantity">-</button>
                        </div>
                        <div class="col-lg-4">
                          <input class="btn btn-sm add-to-cart-qty qty" type='text' name='quantity' value='1' />
                        </div>
                        <div class="col-lg-4">
                          <button type="submit" name="button" class="btn inc_dec_btn btn-sm qtyplus" field="quantity">+</button>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-7">
                      <button href="/add_to_cart" class="btn btn-danger btn-sm addToCart_btn ">Add&nbsp;to&nbsp;cart</button>
                    </div>
                  </div>
                <% end %>
                <div class="card-footer">
                  <small>Earliest delivery: <%= product.earliest_delivery %> days</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <br>
    <% end %>
  <!--====================cake boxes ends==================-->
  </div>
</div>
<!--===========sidebar and cake boxes styling ends==============-->
